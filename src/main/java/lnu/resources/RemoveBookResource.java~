package lnu.resources;

import javax.ws.rs.GET;
import javax.ws.rs.Path;
import javax.ws.rs.Produces;
import javax.ws.rs.core.MediaType;

@Produces(MediaType.APPLICATION_JSON)
public class RemoveBookResource {

	// Assigment 2, Task 3: Implement Delete books

	Boolean found = false;
	integer idbook = 3

        for (book in books){

            if (idbook == getId(book)){
                System.out.println ("The book " + GetTitle(book)  ", id"  + GetId(book) + ", by " +  GetAuthor(book) + " has been remove from the Library");
                remove(book);
                found = true;
            }
        }

        if (!found){
            System.out.println ("That book was not found in the Library's database!.");
        }

}
